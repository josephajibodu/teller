{
    "name": "josephajibodu/teller",
    "description": "A clean, developer-friendly subscription billing abstraction layer for Laravel that brings Stripe-like subscription and proration features to Paystack and Flutterwave.",
    "keywords": [
        "josephajibodu",
        "teller",
        "cashier",
        "laravel",
        "billing",
        "subscription",
        "payment",
        "paystack",
        "flutterwave",
        "proration",
        "saas",
        "africa",
        "stripe-like"
    ],
    "homepage": "https://github.com/josephajibodu/teller",
    "license": "MIT",
    "authors": [
        {
            "name": "josephajibodu",
            "email": "josephajibodu@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "JosephAjibodu\\Teller\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JosephAjibodu\\Teller\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
